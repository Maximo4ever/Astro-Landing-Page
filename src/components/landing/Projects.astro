---
import projects from "../../config/projects.json";
---

<h2 class="text-5xl font-bold my-8 text-center">Projects</h2>
{
  projects.map((project) => (
    <div class="flex flex-col md:flex-row mb-2 md:text-left text-center">
      <div class="flex-1 p-4">
        <h2 class="font-bold text-2xl my-4">{project.title}</h2>
        <p class="my-2">{project.description}</p>
        <button class="bg-indigo-500 px-5 py-2">More Info</button>
      </div>
      <div class="flex-1">
        <img class="w-80 m-auto" src={project.image} alt="" />
      </div>
    </div>
  ))
}
